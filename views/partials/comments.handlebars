<article class="comments row d-flex justify-content-center mt-2 mx-2 col-12 col-lg-6">
    {{#each this}}
    <div class="comment card my-1 shadow">
        <div class="card-body">
            <h5 class="card-title">
                <i class="bi bi-person-circle"></i> {{user.username}}
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">{{created_at}}</h6>

            <p class="card-text">{{comment_text}}</p>
        </div>
        
    </div>
    {{/each}}
</article>